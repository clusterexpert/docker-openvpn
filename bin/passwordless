#!/bin/bash

#
# Run the OpenVPN server normally
#

if [ "$DEBUG" == "1" ]; then
  set -x
fi

set -e

cd $OPENVPN

# Headless passwordless build
if [ ! -e pki ]; then
    echo "Running ovpn_genconfig $@"
    ovpn_genconfig "$@"
    source ovpn_env.sh
    echo $OVPN_CN | ovpn_initpki nopass
fi

exec ovpn_run

